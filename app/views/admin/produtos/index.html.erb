<h2> Administração de produtos</h2>

<%= will_paginate @records %>

<div class="well">
</div>

<table class="table table-bordered table-striped">
  <%= render_head Produto,
    :nome,
    :categoria_id,
    :preco %>

  <tbody>
    <% @records.each do |produto| %>
      <tr>
        <td> <%= produto.nome %></td>

        <td> <%= produto.categoria ? produto.categoria.nome : "-" %></td>

        <td>
          <%= number_to_currency produto.preco %>
        </td>
        <td>
          <%= link_to 'Editar', edit_admin_produto_path(produto), :class => 'btn btn-primary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @records %>