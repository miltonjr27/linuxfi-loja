<h2>
  Novo <%= @produto.class.model_name %>
</h2>

<%= form_for @produto, :url => [:admin, @produto] do |f| %>

  <% unless @produto.errors.blank? %>

    <ul>
      <% @produto.errors.full_messages.each do |erro| %>
        <li> <%= erro %></li>
      <% end %>
    </ul> 
  <% end %>

  <p>
    Nome: <%= f.text_field :nome %>
  </p>

  <p>
    Preço: <%= f.text_field :preco %>
  </p>

  <p>
    <br/>
    Descrição: <%= f.text_area :descricao %>
  </p>

  <p>
    <%= f.submit 'Enviar' %>
  </p>

<% end %>